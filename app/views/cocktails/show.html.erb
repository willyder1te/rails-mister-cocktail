<h1><%= @cocktail.name %></h1>
<ol>
<% @cocktail.doses.each do |dose|%>
  <li>
    <%= dose.description%> of <%= dose.ingredient.name %>   <%= link_to cocktail_dose_path(@cocktail, dose), method: 'delete' do   %>
          <i class="far fa-trash-alt"></i>
      <% end %>
  </li>
<% end %>
</ol>
<% url = "/cocktails/#{@cocktail.id}/doses/new" %>
<a href=<%= url %> class:"btn-primary">Add an ingredient</a>
